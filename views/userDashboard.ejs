<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OAK Investment - Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f5;
        }
        .nav-active {
            color: #4f46e5;
            position: relative;
        }
  
        .balance-card {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
        }
        .menu-item {
            transition: all 0.2s ease;
        }
        .menu-item:hover {
            transform: translateY(-2px);
        }
    </style>
</head>
<body class="max-w-md mx-auto bg-gray-50">
    <!-- Header -->
    <div class="bg-white px-4 py-3 flex justify-between items-center shadow-sm">
        <div class="flex items-center space-x-2">
            <div class="w-8 h-8 rounded-full bg-indigo-100 flex items-center justify-center">
                <i class="fas fa-leaf text-indigo-600"></i>
            </div>
            <span class="font-semibold">OAK INVESTMENT</span>
        </div>
        <div class="relative">
            <button class="p-2 rounded-full hover:bg-gray-100">
                <i class="fas fa-bell text-gray-500"></i>
                <span class="absolute top-1 right-1 w-2 h-2 bg-red-500 rounded-full"></span>
            </button>
        </div>
    </div>

    <!-- User Greeting -->
    <div class="px-4 py-3 bg-white mt-1">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-gray-500 text-sm">Hi, <%= user.username %></p>
                <h2 class="font-semibold text-lg">Available Balance</h2>
            </div>
        </div>
    </div>

    <!-- Balance Card -->
    <div class="balance-card text-white mx-4 my-3 p-5">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-indigo-100">GHS</p>
                <h1 class="text-3xl font-bold mt-1"><%= user.walletBalance %></h1>
            </div>
            <div class="w-12 h-12 rounded-full bg-white bg-opacity-20 flex items-center justify-center">
                <i class="fas fa-wallet text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="bg-white mx-4 my-3 p-4 rounded-lg shadow-sm">
        <div class="grid grid-cols-2 gap-4">
            <div class="text-center">
                <p class="text-gray-500 text-sm">Balance</p>
                <p class="font-semibold">GHS <%= user.walletBalance %></p>
            </div>
            <div class="text-center">
                <p class="text-gray-500 text-sm">Total Orders</p>
                <p class="font-semibold"><%= user.totalOrders || 0 %></p>
            </div>
            <div class="text-center">
                <p class="text-gray-500 text-sm">Total Earnings</p>
                <p class="font-semibold">GHS <%= user.earnings || 0 %></p>
            </div>
            <div class="text-center">
                <p class="text-gray-500 text-sm">Team Members</p>
                <p class="font-semibold"><%= user.team || 0 %></p>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="fixed bottom-0 left-0 right-0 bg-white shadow-lg flex justify-around items-center py-3">
        <a href="/dashboard" class="nav-active flex flex-col items-center">
            <i class="fas fa-home"></i>
            <span class="text-xs mt-1">Home</span>
        </a>
        <a href="/deposit" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-box"></i>
            <span class="text-xs mt-1">Products</span>
        </a>
        <a href="/orders" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-users"></i>
            <span class="text-xs mt-1">Team</span>
        </a>
        <a href="/account" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-user"></i>
            <span class="text-xs mt-1">Account</span>
        </a>
    </div>

    <script>
        // This dey show active tab
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.bottom-nav a');
            
            navLinks.forEach(link => {
                link.classList.remove('nav-active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('nav-active');
                }
            });
        });
    </script>
</body>
</html>
