<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OAK Investment - My Team</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f5f5;
            padding-bottom: 70px;
        }
        .nav-active {
            color: #4f46e5;
            position: relative;
        }
        .nav-active::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 6px;
            height: 6px;
            background-color: #4f46e5;
            border-radius: 50%;
        }
        .team-header {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
        }
        .team-member-card {
            transition: all 0.2s ease;
            border-left: 4px solid transparent;
        }
        .team-member-card:hover {
            transform: translateY(-2px);
            border-left-color: #4f46e5;
        }
        .social-btn {
            transition: all 0.2s ease;
            flex: 1;
        }
        .whatsapp-btn {
            background: linear-gradient(135deg, #25D366, #128C7E);
        }
        .telegram-btn {
            background: linear-gradient(135deg, #0088cc, #006699);
        }
        .facebook-btn {
            background: linear-gradient(135deg, #1877F2, #0A58CA);
        }
        .copy-btn {
            background: linear-gradient(135deg, #6B7280, #4B5563);
        }
    </style>
</head>
<body class="max-w-md mx-auto">
    <!-- Header -->
    <div class="bg-white px-4 py-3 flex justify-between items-center shadow-sm">
        <div class="flex items-center space-x-2">
            <a href="/dashboard" class="text-gray-500">
                <i class="fas fa-arrow-left"></i>
            </a>
            <span class="font-semibold">My Team</span>
        </div>
        <div class="relative">
            <a href="/team/invite-history" class="p-2 rounded-full hover:bg-gray-100 text-gray-500">
                <i class="fas fa-history"></i>
            </a>
        </div>
    </div>

    <!-- Team Stats -->
    <div class="team-header text-white mx-4 my-4 p-5">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-indigo-100">Team Members</p>
                <h1 class="text-3xl font-bold mt-1"><%= user.teamMembers || 0 %></h1>
                <p class="text-indigo-100 mt-2">Total Earnings: <span class="font-bold">GHS <%= user.teamEarnings || 0 %></span></p>
            </div>
            <div class="w-12 h-12 rounded-full bg-white bg-opacity-20 flex items-center justify-center">
                <i class="fas fa-users text-xl"></i>
            </div>
        </div>
    </div>

    <!-- Quick Invite Section -->
    <div class="bg-white mx-4 my-3 rounded-lg shadow-sm overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100">
            <h3 class="font-semibold">Quick Invite</h3>
            <p class="text-gray-500 text-sm mt-1">Share your referral link</p>
        </div>
        <div class="p-4">
            <!-- Social Share Buttons -->
            <div class="flex space-x-2 mb-3">
                <a href="https://wa.me/?text=Join%20OAK%20Investment%20with%20my%20referral%20link%3A%20https%3A%2F%2Foakinvestment.com%2Fref%3D<%= user.referralCode %>" 
                   class="social-btn whatsapp-btn text-white py-2 px-3 rounded-lg text-center">
                    <i class="fab fa-whatsapp"></i> WhatsApp
                </a>
                <a href="https://t.me/share/url?url=https%3A%2F%2Foakinvestment.com%2Fref%3D<%= user.referralCode %>&text=Join%20OAK%20Investment" 
                   class="social-btn telegram-btn text-white py-2 px-3 rounded-lg text-center">
                    <i class="fab fa-telegram"></i> Telegram
                </a>
            </div>
            <div class="flex space-x-2">
                <a href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Foakinvestment.com%2Fref%3D<%= user.referralCode %>" 
                   class="social-btn facebook-btn text-white py-2 px-3 rounded-lg text-center">
                    <i class="fab fa-facebook"></i> Facebook
                </a>
                <button onclick="copyReferralLink()" 
                        class="social-btn copy-btn text-white py-2 px-3 rounded-lg text-center">
                    <i class="fas fa-copy"></i> Copy Link
                </button>
            </div>
        </div>
    </div>

    <!-- Team Members List -->
    <div class="bg-white mx-4 my-3 rounded-lg shadow-sm overflow-hidden">
        <div class="px-4 py-3 border-b border-gray-100 flex justify-between items-center">
            <h3 class="font-semibold">Active Members (<%= user.teamMembers || 0 %>)</h3>
            <a href="/team/all" class="text-indigo-600 text-sm">View All</a>
        </div>
        
        <!-- Team Member 1 -->
        <div class="team-member-card bg-white p-4 hover:bg-gray-50">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center">
                    <span class="text-blue-600 font-medium">JM</span>
                </div>
                <div class="flex-1">
                    <h4 class="font-medium">John Mensah</h4>
                    <p class="text-gray-500 text-sm">Joined 15 Jan 2024</p>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-green-600">GHS 1,250</p>
                    <p class="text-gray-500 text-xs">Earned for you</p>
                </div>
            </div>
        </div>
        
        <!-- Team Member 2 -->
        <div class="team-member-card bg-white p-4 hover:bg-gray-50">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center">
                    <span class="text-purple-600 font-medium">AK</span>
                </div>
                <div class="flex-1">
                    <h4 class="font-medium">Ama Konadu</h4>
                    <p class="text-gray-500 text-sm">Joined 5 Feb 2024</p>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-green-600">GHS 850</p>
                    <p class="text-gray-500 text-xs">Earned for you</p>
                </div>
            </div>
        </div>
        
        <!-- Team Member 3 -->
        <div class="team-member-card bg-white p-4 hover:bg-gray-50">
            <div class="flex items-center space-x-3">
                <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center">
                    <span class="text-green-600 font-medium">KO</span>
                </div>
                <div class="flex-1">
                    <h4 class="font-medium">Kwame Osei</h4>
                    <p class="text-gray-500 text-sm">Joined 22 Mar 2024</p>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-green-600">GHS 420</p>
                    <p class="text-gray-500 text-xs">Earned for you</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="fixed bottom-0 left-0 right-0 bg-white shadow-lg flex justify-around items-center py-3">
        <a href="/dashboard" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-home"></i>
            <span class="text-xs mt-1">Home</span>
        </a>
        <a href="/products" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-box"></i>
            <span class="text-xs mt-1">Products</span>
        </a>
        <a href="/team" class="nav-active flex flex-col items-center">
            <i class="fas fa-users"></i>
            <span class="text-xs mt-1">Team</span>
        </a>
        <a href="/account" class="flex flex-col items-center text-gray-500">
            <i class="fas fa-user"></i>
            <span class="text-xs mt-1">Account</span>
        </a>
    </div>

    <script>
        // Highlight active nav item
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.bottom-nav a');
            
            navLinks.forEach(link => {
                link.classList.remove('nav-active');
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('nav-active');
                }
            });
        });

        function copyReferralLink() {
            const referralLink = `https://oakinvestment.com/ref=${encodeURIComponent('<%= user.referralCode %>')}`;
            navigator.clipboard.writeText(referralLink)
                .then(() => alert('Referral link copied to clipboard!'))
                .catch(() => alert('Failed to copy link'));
        }
    </script>
</body>
</html>
